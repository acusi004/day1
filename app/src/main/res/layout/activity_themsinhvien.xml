<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".themsinhvien"
    android:padding="10dp">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THEM SINH VIEN"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Spinner
        android:id="@+id/spn_themSv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/txt1"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/edt_tenSv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/form"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/spn_themSv"/>

    <EditText
        android:id="@+id/edt_diaChiSv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/form"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_tenSv"/>

    <Button
        android:id="@+id/btn_subMit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_diaChiSv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="SUBMIT"/>


</androidx.constraintlayout.widget.ConstraintLayout>